{
  "name": "@honed/query",
  "version": "0.1.0",
  "license": "MIT",
  "description": "A composable for handling query parameters for Vue and Inertia.",
  "keywords": [
    "honed",
    "vue",
    "inertia",
    "query"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run format && vite build && vue-tsc --declaration --emitDeclarationOnly",
    "format": "npx @biomejs/biome format --write src/",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "patch": "npm version patch --no-git-tag-version",
    "minor": "npm version minor --no-git-tag-version",
    "major": "npm version major --no-git-tag-version",
    "release": "npm run build && npm publish",
    "visualise": "npx vite-bundle-visualizer -o ./tmp/bundle-visualizer.html"
  },
  "author": "Joshua Wallace",
  "repository": {
    "type": "git",
    "url": "https://github.com/honedlabs/query.git"
  },
  "homepage": "https://github.com/honedlabs/query#readme",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "peerDependencies": {
    "@inertiajs/vue3": "^1.2.0||^2.x",
    "@vueuse/core": "^10.0.0||^11.0.0",
    "axios": "^1.2.0",
    "vue": "^3.x"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.9.3",
    "axios": "^1.2.0",
    "jsdom": "^25.0.1",
    "typescript": "^5.7.0",
    "vite": "^5.4.11",
    "vite-bundle-visualizer": "^1.2.1",
    "vitest": "^2.1.5",
    "vue-tsc": "^2.1.10"
  }
}
